{
    "name": "pvg/test-branch-builder",
    "description": "Make your test server workflow friendly",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Szymon Dudziak",
            "email": "szymon.dudziak@equiqo.com"
        },
        {
            "name": "Kuba Wer≈Ços",
            "email": "kuba.werlos@equiqo.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "fguillot/simpleLogger": "^1.0",
        "incenteev/composer-parameter-handler": "^2.1",
        "lesstif/php-jira-rest-client": "^1.10",
        "sebastian/git": "^2.1",
        "symfony/config": "^3.2",
        "symfony/console": "^3.2",
        "symfony/dependency-injection": "^3.2",
        "symfony/event-dispatcher": "^3.2",
        "symfony/expression-language": "^3.2",
        "symfony/filesystem": "^3.2",
        "symfony/property-access": "^3.2",
        "symfony/serializer": "^3.2",
        "symfony/yaml": "^3.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.3",
        "kubawerlos/types-checker": "^1.1",
        "phing/phing": "^2.16",
        "phpstan/phpstan": "^0.6.4",
        "phpunit/phpunit": "^6.1",
        "sebastian/phpcpd": "^3.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Pvg\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ]
    },
    "extra": {
        "incenteev-parameters": {
            "file": "config/config.yml",
            "dist-file": "config/config.dist.yml",
            "keep-outdated": true,
            "env-map": {
                "jira.host": "JIRA_HOST",
                "jira.authentication.username": "JIRA_AUTH_USERNAME",
                "jira.authentication.password": "JIRA_AUTH_PASSWORD",
                "jira.add.ticket.type.prefix.to.branch": "JIRA_ADD_TICKET_TYPE_TO_BRANCH",
                "jira.watch.projects": "JIRA_WATCH_PROJECTS",
                "jira.trigger.deploy.state": "JIRA_TRIGGER_DEPLOY_STATE",
                "jira.trigger.remove.states": "JIRA_TRIGGER_REMOVE_STATE",
                "server.username": "SERVER_USERNAME",
                "server.user.homedir": "SERVER_HOMEDIR",
                "server.vhost.dir": "SERVER_VHOST_DIR",
                "server.vhost.dir.public": "SERVER_VHOST_DIR_PUBLIC"
            }
        }
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    }
}
